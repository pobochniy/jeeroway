@model JeerowayWiki.Images.ModelView.AddImg

<form class="form-horizontal" action="/Img/Insert" method="post" enctype="multipart/form-data">
    <h4>
        Добавление фото
        <a class="btn btn-info" href="/Albums/Show?id=@(Model.AlbumId)" style="float:right;">Вернуться</a>
    </h4>
    <hr>
    <input type="hidden" name="Id" value="@Model.Id" />
    <input type="hidden" name="AlbumId" value="@Model.AlbumId" />
    <div class="form-group row">
        <label class="col-md-3 control-label" for="login">File</label>
        <div class="col-md-9">
            <input type="file" name="AddImage" multiple="multiple" accept="image/*" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 control-label" for="login">Title</label>
        <div class="col-md-9">
            <input class="form-control" type="text" name="Title" value="@Model.Title" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 control-label" for="login">Description</label>
        <div class="col-md-9">
            <input class="form-control" type="text" name="Description" value="@Model.Description" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-12 text-center">
            <input type="submit" value="Submit" class="btn btn-primary">
        </div>
    </div>
</form>