@model Atheneum.EntityImg.Img

<form class="form-horizontal" action="/Img/Edit" method="post" enctype="multipart/form-data">
    <h4>
        Редактирование фото
        @if (Model.Id != Guid.Empty)
        {
            <a class="btn btn-danger" href="/Img/Delete?id=@(Model.Id)&albumId=@(Model.AlbumId)" onclick="return confirm('Вы - администратор?')">Удалить фото</a>
        }
        <a class="btn btn-info" href="/Albums/Show?id=@(Model.AlbumId)" style="float:right;">Вернуться</a>
    </h4>
    <hr>
    <input type="hidden" name="Id" value="@Model.Id" />
    <input type="hidden" name="AlbumId" value="@Model.AlbumId" />
    <div class="form-group row">
        <label class="col-md-3 control-label" for="login">Title</label>
        <div class="col-md-9">
            <input class="form-control" type="text" name="Title" value="@Model.Title" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 control-label" for="login">Description</label>
        <div class="col-md-9">
            <input class="form-control" type="text" name="Description" value="@Model.Description" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-12 text-center">
            <input type="submit" value="Submit" class="btn btn-primary">
        </div>
    </div>
</form>