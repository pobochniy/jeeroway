<h2>Файлопомойка проекта Jeeroway</h2>
@if (User != null && User.Identity.IsAuthenticated)
{
    <text>
        <span>Hi, @User.Identity.Name</span>
    </text>
    <form action="/Auth/LogOut" method="post">
        <input type="submit" value="Log Out" />
    </form>
}
else
{
    <form class="form-horizontal" action="/Auth/LogIn" method="post">
        <h4>Use a local account to log in.</h4>
        <hr>
        <div class="form-group row">
            <label class="col-md-3 control-label" for="login">Login, Email or Phone</label>
            <div class="col-md-9">
                <input class="form-control" type="text" name="login" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-3 control-label" for="password">Password</label>
            <div class="col-md-9">
                <input class="form-control" type="text" name="password" />
                <div *ngIf="loginForm.controls['password'].errors && !loginForm.controls['password'].pristine" class="error-msg">
                    <div [hidden]="!loginForm.controls['password'].errors.required">Password is required.</div>
                    <div [hidden]="loginForm.controls['password'].errors.minlength && !(loginForm.controls['password'].errors.minlength.actualLength < loginForm.controls['password'].errors.minlength.requiredLength)">
                        Min Length 3
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-12 text-center">
                <input type="submit" value="Log in" class="btn btn-primary">
            </div>
        </div>
    </form>

}